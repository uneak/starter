{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form '@UneakPortoAdmin/FOSUser/porto_theme.html.twig' %}

<form action="{{ path('user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">

    {{ form_widget(form) }}

    <div class="row">
        <div class="col-sm-12">
            <button type="submit" id="_submit" name="_submit" class="btn btn-primary btn-block btn-lg mt-lg">{{ 'resetting.reset.submit'|trans }}</button>
        </div>
    </div>
</form>

{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group mb-lg">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <div class="input-group input-group-icon">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control input-lg" />
            <span class="input-group-addon">
                <span class="icon icon-lg">
                    <i class="fa fa-user"></i>
                </span>
            </span>
        </div>
    </div>

    <div class="form-group mb-lg">
        <div class="clearfix">
            <label for="password" class="pull-left">{{ 'security.login.password'|trans }}</label>
            <a href="{{ path('user_resetting_request') }}" class="pull-right">Lost Password?</a>
        </div>
        <div class="input-group input-group-icon">
            <input type="password" id="password" name="_password" required="required" class="form-control input-lg" />
            <span class="input-group-addon">
                <span class="icon icon-lg">
                    <i class="fa fa-lock"></i>
                </span>
            </span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <div class="checkbox-custom checkbox-default">
                <input type="checkbox" id="remember_me" name="_remember_me" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>
        <div class="col-sm-4 text-right">
            <button type="submit" id="_submit" name="_submit" class="btn btn-primary hidden-xs">{{ 'security.login.submit'|trans }}</button>
            <button type="submit" id="_submit" name="_submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">{{ 'security.login.submit'|trans }}</button>
        </div>
    </div>


    <span class="mt-lg mb-lg line-thru text-center text-uppercase">
        <span>or</span>
    </span>

    <div class="mb-xs text-center">
        <a href="{{ path('oauth_authentication_code_request', {service: "facebook", action: "admin.login"}) }}" class="btn btn-facebook mb-md ml-xs mr-xs pr-md pl-md"><i class="fa fa-facebook"></i> connexion</a>
        <a href="{{ path('oauth_authentication_code_request', {service: "google", action: "admin.login"}) }}" class="btn btn-gplus mb-md ml-xs mr-xs pr-md pl-md"><i class="fa fa-google"></i> connexion</a>
        <a href="{{ path('oauth_authentication_code_request', {service: "twitter", action: "admin.login"}) }}" class="btn btn-twitter mb-md ml-xs mr-xs pr-md pl-md"><i class="fa fa-twitter"></i> connexion</a>
    </div>

    <p class="text-center">Don't have an account yet? <a href="{{ path('user_registration_register') }}">Sign Up!</a>

</form>




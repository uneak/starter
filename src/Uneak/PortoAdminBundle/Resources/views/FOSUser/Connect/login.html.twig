                <li><a href="{{ path('user_profile_disconnect', {service: "google"}) }}">Deconnecter le profil</a></li>
            </ul>
        {% endif %}
    </div>
    <hr/>
    <div>
        <a href="{{ path('oauth_authentication_code_request', {service: "twitter", action: "admin.connect"}) }}" class="btn btn-twitter mb-md ml-xs mr-xs pr-md pl-md"><i class="fa fa-twitter"></i> connexion</a><br />
        {%  if user.twitterId %}
            <ul>
                <li>Connecté</li>
                <li>{{ user.twitterId }}</li>
                <li><a href="https://twitter.com/intent/user?user_id={{ user.twitterId }}">Voir le profil</a></li>
                <li><a href="{{ path('user_profile_disconnect', {service: "twitter"}) }}">Deconnecter le profil</a></li>
            </ul>
        {% endif %}

    </div>
</div>
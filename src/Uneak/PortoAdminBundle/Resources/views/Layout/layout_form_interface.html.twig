{% extends 'UneakPortoAdminBundle:Layout:base.html.twig' %}

    {% block html_tag %}<html class="fixed" lang="fr">{% endblock %}


	{% block title %}{{ title }} - {{ parent() }}{% endblock %}
	{% block meta_keywords %}{% endblock %}
	{% block meta_description %}{% endblock %}

	{% block content %}

		<!-- start: page -->
		<section class="body-sign">
			<div class="center-sign">
				{{ renderBlock(brand) }}
				<div class="panel panel-sign">
					<div class="panel-title-sign mt-xl text-right">
						<h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-{{ icon }} mr-xs"></i> {{ title }}</h2>
					</div>
					<div class="panel-body">
						{{ renderBlock(content) }}
					</div>
				</div>

				<p class="text-center text-muted mt-md mb-md">&copy; Copyright 2015. All Rights Reserved.</p>
			</div>
		</section>
		<!-- end: page -->

	{% endblock %}


	{% block stylesheets %}
		{{ parent() }}
		{{ renderAssets('AssetExternalCss') }}
		{{ renderAssets('AssetExternalCss_theme') }}
	{% endblock %}

	{% block javascripts_top %}
		{{ parent() }}
		{{ renderAssets('AssetExternalJs_top') }}
	{% endblock %}

	{% block javascripts_bottom %}
		{{ parent() }}
		{{ renderAssets('AssetExternalJs') }}
		<!-- Theme -->
		{{ renderAssets('AssetExternalJs_theme') }}
		<!-- Theme init -->
		{{ renderAssets('AssetExternalJs_theme_init') }}
	{% endblock %}

	{% block javascript_script %}
		{{ parent() }}
		{{ renderAssets('AssetInternalJs') }}
	{% endblock %}
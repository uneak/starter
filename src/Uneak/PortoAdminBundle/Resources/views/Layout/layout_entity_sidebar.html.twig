{#<menu id="content-menu" class="inner-menu" role="menu">#}
<menu id="{{ uniqid }}" class="inner-menu" role="menu">
    <div class="nano">
        <div class="nano-content">

            <div class="inner-menu-toggle-inside">
                <a href="#" class="inner-menu-collapse">
                    <i class="fa fa-chevron-up visible-xs-inline"></i><i class="fa fa-chevron-left hidden-xs-inline"></i> Cacher le menu
                </a>

                <a href="#" class="inner-menu-expand" data-open="inner-menu">
                    Voir le menu <i class="fa fa-chevron-down"></i>
                </a>
            </div>

            <div class="inner-menu-content">

                <div style="text-align: center;">
                    {% if photo %}
                        {% set photoImage = photo %}
                    {% else %}
                        {% set photoImage = "bundles/uneakportoadmin/images/default_avatar.jpg" %}
                    {% endif %}

                    <img src="{{ asset(photoImage) | imagine_filter('porto_admin_entity_photo') }}" alt="" class="img-circle" />
                </div>

                {#<a href="mailbox-compose.html" class="btn btn-block btn-primary btn-md pt-sm pb-sm text-md">#}
                    {#<i class="fa fa-envelope mr-xs"></i>#}
                    {#Compose#}
                {#</a>#}

                {% for widget in widgets %}
                    {{ renderBlock(widget) }}
                    {% if not loop.last %}<hr class="separator" />{% endif %}
                {% endfor %}

            </div>
        </div>
    </div>
</menu>
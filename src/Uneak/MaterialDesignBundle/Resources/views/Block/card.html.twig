<div class="mdl-card mdl-shadow--2dp" style="height: {{ item.height }};width: {{ item.width }};">
    <div class="mdl-card__title" style="background: url('{{ item.background }}') center / cover;color: {{ item.titleColor }};height: {{ item.backgroundHeight }};">
        <h2 class="mdl-card__title-text">{{ item.title }}</h2>
    </div>
    <div class="mdl-card__supporting-text">
        {{ item.description }}
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            Get Started
        </a>
    </div>
    <div class="mdl-card__menu">
        <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
            <i class="material-icons">share</i>
        </button>
    </div>
</div>